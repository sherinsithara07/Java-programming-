interface InterestRate {
    double calculateInterest(double amount);
}

class SavingsAccount implements InterestRate {
    public double calculateInterest(double amount) {
        return amount * 0.04;
    }
}

class LoanAccount implements InterestRate {
    public double calculateInterest(double amount) {
        return amount * 0.02;
    }
}

public class Main {
    public static void main(String[] args) {

        InterestRate savings = new SavingsAccount();
        InterestRate loan = new LoanAccount();

        System.out.println("Savings Interest: " + savings.calculateInterest(10000));
        System.out.println("Loan Interest: " + loan.calculateInterest(10000));
    }
}
